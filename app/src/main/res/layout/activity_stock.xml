<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_wep" />

    <RelativeLayout
        android:id="@+id/lnrPriceStock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/boxTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvHorizontalLine"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.7">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.85">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="5dp"
                                        android:orientation="horizontal">

                                        <com.wep.common.app.views.WepButton
                                            android:id="@+id/btn_Stockdepart"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/background_btn"
                                            android:text="Department"
                                            android:textAllCaps="false"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                                            android:theme="@style/WepButtonWithMarigin" />

                                        <com.wep.common.app.views.WepButton
                                            android:id="@+id/btn_Stockcateg"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/background_btn"
                                            android:minHeight="40dp"
                                            android:text="Category"
                                            android:textAllCaps="false"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                                            android:theme="@style/WepButtonWithMarigin" />

                                        <com.wep.common.app.views.WepButton
                                            android:id="@+id/btn_Stockitem"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/background_btn"
                                            android:minHeight="40dp"
                                            android:text="Item"
                                            android:textAllCaps="false"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                                            android:theme="@style/WepButtonWithMarigin" />
                                    </LinearLayout>
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/tvHorizontalLine1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2dp"
                                    android:background="#000000" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="0.15"
                                    android:orientation="horizontal">


                                    <ListView
                                        android:id="@+id/listViewFilter1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:divider="#000000"
                                        android:dividerHeight="1dp" />

                                    <TextView
                                        android:id="@+id/tvStockdeptline"
                                        android:layout_width="3dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <ListView
                                        android:id="@+id/listViewFilter2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:divider="#000000"
                                        android:dividerHeight="1dp" />

                                    <TextView
                                        android:id="@+id/tvStockcategline"
                                        android:layout_width="3dp"
                                        android:layout_height="match_parent"
                                        android:background="#000000" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/listViewFilter3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />


                                </LinearLayout>



                            </LinearLayout>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvVerticalLine"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#000000" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/rowItemLongName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true">

                                        <TextView
                                            android:id="@+id/tvItemLongName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Item Name"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <AutoCompleteTextView
                                            android:id="@+id/autoTextItemLongNameValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:imeOptions="actionNext"
                                            android:layout_weight="1"
                                            android:drawableRight="@drawable/searchicon_img"
                                            android:inputType="text"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Item Barcode"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <AutoCompleteTextView
                                            android:id="@+id/AutoCompleteItemBarcodeValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:imeOptions="flagNoExtractUi"
                                            android:layout_weight="1"
                                            android:drawableRight="@drawable/searchicon_img"
                                            android:inputType="text"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rowItemExistingStock"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tvItemExistingStock"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Existing Stock"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <TextView
                                            android:id="@+id/tvItemExistingStockValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:layout_weight="1"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rowItemNewStock"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tvItemNewStock"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="New Stock"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <EditText
                                            android:id="@+id/etItemNewStock"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="5"
                                            android:layout_weight="1"
                                            android:inputType="numberDecimal"
                                            android:selectAllOnFocus="true" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rowItemRate1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tvItemRate1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Rate1"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <EditText
                                            android:id="@+id/etItemRate1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="5"
                                            android:layout_weight="1"
                                            android:inputType="numberDecimal"
                                            android:selectAllOnFocus="true" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rowItemRate2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp">

                                        <TextView
                                            android:id="@+id/tvItemRate2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Rate2"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <EditText
                                            android:id="@+id/etItemRate2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="5"
                                            android:layout_weight="1"
                                            android:inputType="numberDecimal"
                                            android:selectAllOnFocus="true" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rowItemRate3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp">

                                        <TextView
                                            android:id="@+id/tvItemRate3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Rate3"
                                            android:layout_weight="1.5"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <EditText
                                            android:id="@+id/etItemRate3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="5"
                                            android:layout_weight="1"
                                            android:inputType="numberDecimal"
                                            android:selectAllOnFocus="true" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5dp_720dp_4dp_600dp"
                                    android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp">

                                    <TextView
                                        android:id="@+id/textView19"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="*Please note, new stock will be added to existing stock\n**Only rate(s) and quantity are configurable here."
                                        android:textColor="@color/red" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/boxBtn"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/boxBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp_720dp_4dp_600dp">

            <com.wep.common.app.views.WepButton
                android:id="@+id/btnUpdateStock"
                android:layout_width="@dimen/_100dp_720dp_95dp_600dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn"
                android:onClick="UpdateStock"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />

            <com.wep.common.app.views.WepButton
                android:id="@+id/btnClearStock"
                android:layout_width="@dimen/_100dp_720dp_95dp_600dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_btn"
                android:onClick="ClearStock"
                android:text="Clear"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />

            <com.wep.common.app.views.WepButton
                android:id="@+id/btnCloseStock"
                android:layout_width="@dimen/_100dp_720dp_95dp_600dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_btn"
                android:onClick="CloseStock"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
